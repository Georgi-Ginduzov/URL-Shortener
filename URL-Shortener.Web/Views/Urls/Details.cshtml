@model UrlReadOnlyVM
@{
    ViewData["Title"] = "Details";
}
<h2>Details</h2>
<div>
    <dl class="row">
        <dt class="col-sm-2">Short</dt>
        <dd class="col-sm-10">@Model.ShortenedUrl</dd>
        <dt class="col-sm-2">Target</dt>
        <dd class="col-sm-10">@Model.TargetUrl</dd>
        <dt class="col-sm-2">Created</dt>
        <dd class="col-sm-10">@Model.ShortenedAt</dd>
        <dt class="col-sm-2">Expires</dt>
        <dd class="col-sm-10">@Model.ExpiresAt</dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back</a>
</p>
<form asp-action="Edit" method="post" class="mb-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="TargetUrl" class="form-label"></label>
        <input asp-for="TargetUrl" class="form-control" />
        <span asp-validation-for="TargetUrl" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ExpiresAt" class="form-label"></label>
        <input asp-for="ExpiresAt" class="form-control" type="datetime-local" />
        <span asp-validation-for="ExpiresAt" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Analitycs" class="form-label"></label>
        <select asp-for="Analitycs" class="form-select" asp-items="Html.GetEnumSelectList<URL_Shortener.Web.Data.Entities.Enums.AnalitycsType>()"></select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back</a>
</form>
<form asp-action="Delete" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}